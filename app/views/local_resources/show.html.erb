<div style="margin-top:20px;" class="row">
  <div class="small-12 medium-9 large-8 columns small-centered">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Business name:</strong>
      <%= @local_resource.business_name %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= number_to_phone(@local_resource.phone, area_code: true, extension: @local_resource.phone_ext)%>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @local_resource.email %>
    </p>

    <p>
      <strong>Url:</strong>
      <%= @local_resource.url %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @local_resource.address.blank? ? '' : @local_resource.address.oneline_summary %>
    </p>

    <%= link_to 'Edit', edit_local_resource_path(@local_resource) %> |
    <%= link_to 'Back', local_resources_path %>
  </div>
</div>